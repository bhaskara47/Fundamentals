# Creating Directories
mkdir dir1 dir2 (Creating directories)
mkdir dir1/subdir-1 (Creating sub-directories after creating main directory)
mkdir dir2/subdir-2 (Creating sub-directories after creating main directory)
mkdir -p dir3/sub-dir3 dir4/sub-dir4 (Creating sub-directory without making main directory by making it as parent using -p)

# Creating Directories and files without creating main Directory:
mkdir -p dir1/subdir-1 dir2/subdir-2

# Creating files inside directories without going inside the directories
touch dir1/sub1/file1.txt dir1/sub1/file1.pdf dir2/sub2/file2.txt dir2/sub2/file2.pdf

